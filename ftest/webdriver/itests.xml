<project name="gridfs-integration-tests" xmlns:nx="urn:nuxeo-build" xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml" uri="urn:nuxeo-artifact" />
  <taskdef resource="net/sf/antcontrib/antlib.xml" />

  <property name="out.dir" value="${maven.project.build.directory}" />
  <property name="classifier" value="nuxeo-cap" />
  <property name="nuxeo.wizard.done" value="true" />

  <unzip dest="${out.dir}/" overwrite="false">
    <artifact:resolveFile key="org.nuxeo:nuxeo-ftest::zip" />
  </unzip>
  <import file="${out.dir}/nuxeo-ftest.xml" />

  <property name="mp.install" value="file:${out.dir}/marketplace-${maven.project.version}.zip" />

  <target name="prepare-conf">
    <antcall target="set-conf">
      <param name="name" value="nuxeo.mongodb.server" />
      <param name="value" value="${nuxeo.mongodb.server}" />
    </antcall>
    <antcall target="set-conf">
      <param name="name" value="nuxeo.mongodb.dbname" />
      <param name="value" value="${nuxeo.mongodb.dbname}" />
    </antcall>
    <antcall target="set-conf">
      <param name="name" value="nuxeo.mongodb.gridfs.bucket" />
      <param name="value" value="${nuxeo.mongodb.gridfs.bucket}" />
    </antcall>
  </target>

  <target name="prepare-gridfs-environment" depends="prepare-environment,prepare-conf">
    <copy todir="${out.dir}">
      <artifact:file key="org.nuxeo.marketplace.gridfs-blob-storage:marketplace::zip" />
    </copy>
  </target>

  <target name="cleanup-gridfs-environment" depends="cleanup-environment" />

</project>
